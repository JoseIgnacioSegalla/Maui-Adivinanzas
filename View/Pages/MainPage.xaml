<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P1.MainPage"
             >

       
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="adivinanza.jpeg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Adivinador"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Bienvenido al juego de adivinanzas"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />


            <Button
                Text="Jugar" 
                SemanticProperties.Hint="Cambia de pagina"
                Clicked="CambiarPantalla"
                HorizontalOptions="Fill" />
            

        <!-- Agregar el puntaje total una vez terminado el tiempo  -->
            <Label Text="Puntuacion Total:" IsVisible="False" x:Name="puntuacion" />
        </VerticalStackLayout>
    

</ContentPage>
