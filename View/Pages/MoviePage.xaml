<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="P1.MoviePage"
             Title="Game page"
             xmlns:local="clr-namespace:P1.ViewModels">

    <ContentPage.BindingContext>
        <local:MovieViewModel/>

    </ContentPage.BindingContext>
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
        EventName="Appearing"
        Command="{Binding OnCommand}"
        />

    </ContentPage.Behaviors>

    <VerticalStackLayout>
      

           
                
          
        <Label
            Text="Adivina la pelicula"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

        <HorizontalStackLayout HorizontalOptions="Center"
                               Margin="20">
            <StackLayout HorizontalOptions="Center"
                         WidthRequest="400"
                         Margin="20"
                         x:Name="Buttons">

                <Button
                    Command="{Binding BtnCountCommand}"
                    CommandParameter="{Binding Name}"
                    Text="{Binding Name}"
                    x:Name="Name"
                    FontSize="Large"
                    Margin="10"/>
                <Button
                    Command="{Binding BtnCountCommand}"
                    CommandParameter="{Binding AlternativeName1}"
                    Text="{Binding AlternativeName1}"
                    x:Name="AlternativeName1"
                    FontSize="Large"
                    Margin="10"/>
                <Button
                    Command="{Binding BtnCountCommand}"
                    CommandParameter="{Binding AlternativeName2}"
                    Text="{Binding AlternativeName2}"
                    x:Name="AlternativeName2"
                    FontSize="Large"
                    Margin="10"/>
            </StackLayout>
            <StackLayout Margin="20">

                <Border Stroke="black">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40,20,20,40"/>
                    </Border.StrokeShape>
    
                    <Image Source="{Binding UrlImage}"
                           Aspect="Fill"
                           WidthRequest="400"
                           HeightRequest="250"/>
                </Border>



            </StackLayout>
        

        </HorizontalStackLayout>
        <!-- Cuando elijo un boton erroneo que me muestre un cartel que la seleccion fue erronea -->
        <StackLayout>
            <!-- Ejemplo de enlace a la propiedad Counter -->
            <HorizontalStackLayout HorizontalOptions="Center" >
            <Label Text="{Binding Counter}"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"/>
                    <Label FontSize="Header" Text="ðŸ‘" IsVisible="{Binding CorrectImage}" />
                    <Label FontSize="Header" Text="ðŸ‘Ž" IsVisible="{Binding IncorrectImage}" />
            </HorizontalStackLayout>
        </StackLayout>

        
       
            
 
        
    </VerticalStackLayout>



</ContentPage>